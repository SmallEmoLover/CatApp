<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.catInfo.CatInfoActivity">

  <TextView
      android:id="@+id/catInfoTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_margin"
      android:textSize="@dimen/font_size_large"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Name" />

  <TextView
      android:id="@+id/catInfoBio"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_margin"
      android:textSize="@dimen/font_size_small"
      app:layout_constraintBottom_toTopOf="@+id/catInfoOwner"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/catInfoTitle"
      tools:text="Some bio" />

  <TextView
      android:id="@+id/catInfoOwner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_margin"
      android:textSize="@dimen/font_size_small"
      app:layout_constraintBottom_toTopOf="@+id/catInfoVaccinations"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/catInfoBio"
      tools:text="Owner info" />

  <TextView
      android:id="@+id/catInfoVaccinations"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_margin"
      android:textSize="@dimen/font_size_small"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/catInfoOwner"
      tools:text="Vaccinations info" />
</androidx.constraintlayout.widget.ConstraintLayout>